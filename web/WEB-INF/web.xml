<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>gilead.gcfacturador.controller.GCFacturador_Login_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>gilead.gcfacturador.controller.GCFacturador_Logout_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Serie</servlet-name>
        <servlet-class>gilead.gcfacturador.controller.GCFacturador_Serie_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cliente</servlet-name>
        <servlet-class>gilead.gcfacturador.controller.GCFacturador_Cliente_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Comprobante</servlet-name>
        <servlet-class>gilead.gcfacturador.controller.GCFacturador_Comprobante_Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Serie</servlet-name>
        <url-pattern>/Serie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cliente</servlet-name>
        <url-pattern>/Cliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Comprobante</servlet-name>
        <url-pattern>/Comprobante</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            120
        </session-timeout>
    </session-config>
    <!-- Pagina de Inicio -->
    <welcome-file-list>
        <welcome-file>views/GC-Facturador-Login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
